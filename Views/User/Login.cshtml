@model AvitoClone.Models.User

@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<div class="auth-container">
    <h2 class="auth-title">Вход в аккаунт</h2>

    <form class="auth-form" asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username">Имя пользователя</label>
            <input asp-for="Username" class="form-control" placeholder="Введите ваш логин" />
            <span asp-validation-for="Username" class="validation-error"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Введите пароль" />
            <span asp-validation-for="Password" class="validation-error"></span>
        </div>
        
        <button type="submit" class="auth-button">Войти</button>
    </form>

    <div class="auth-footer">
        Нет аккаунта? <a class="auth-link" asp-action="Register">Зарегистрироваться</a>
    </div>
</div>