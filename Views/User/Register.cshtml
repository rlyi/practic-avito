@model AvitoClone.Models.User

@{
    ViewData["Title"] = "Регистрация";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<div class="auth-container">
    <h2 class="auth-title">Создание аккаунта</h2>

    <form class="auth-form" asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Username">Имя пользователя</label>
            <input asp-for="Username" class="form-control" placeholder="Придумайте логин" />
            <span asp-validation-for="Username" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Придумайте пароль" />
            <span asp-validation-for="Password" class="validation-error"></span>
        </div>

        <button type="submit" class="auth-button">Зарегистрироваться</button>
    </form>

    <div class="auth-footer">
        Уже есть аккаунт? <a class="auth-link" asp-action="Login">Войти</a>
    </div>
</div>