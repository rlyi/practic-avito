@model AvitoClone.Models.Ad
@{
    Layout = "_Layout";
    ViewData["Title"] = $"{Model.Title} - AvitoClone";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>jfjfjfj - AvitoClone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .ad-img { 
            max-height: 500px; 
            object-fit: contain; 
        }
        .ad-description {
            white-space: pre-line; /* Сохраняет переносы строк */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <!-- Основная информация об объявлении -->
            <div class="col-md-8">
                <h1>jfjfjfj</h1>
                <div class="text-muted mb-3">
                    <span>Автор: 123</span>
                    <span class="ms-3">Дата: 08.07.2025</span>
                    <span class="ms-3 badge bg-primary"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="/uploads/352d5877-5ed3-4175-bd2a-0aacbe5ef88d_fb93cc46f75acba582d499e350ec0988.jpg" class="img-fluid ad-img mb-3">
                }

                <div class="mb-4">
                    <h3>Описание</h3>
                    <p class="ad-description">kfkfkfkf</p>
                    <h4 class="text-success">585 858,00 ₽</h4>
                </div>
            </div>

            <!-- Блок чата -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Чат по объявлению</div>
                    <div class="card-body">
                        <div class="alert alert-info">Чат будет здесь (можно добавить позже)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>